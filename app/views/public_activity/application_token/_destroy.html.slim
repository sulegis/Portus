li
  .activitie-container
    .activity-type.application-token-destroyed
      i.fa.fa-key
    .user-image
      = user_image_tag(activity.owner.email)
    .description
      h6
        strong
          = "#{activity.owner.display_username} removed the token"
        = " for the application "
        strong
          = activity.parameters[:application]
      small
        i.fa.fa-clock-o
        = activity_time_tag activity.created_at
